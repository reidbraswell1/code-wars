@model CodeWars.Shared.Student

@{
    ViewData["Title"] = "Student Edit";
}

<h2>Edit</h2>

<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodeWarsUserId" class="control-label"></label>
                <input asp-for="CodeWarsUserId" class="form-control" />
                <span asp-validation-for="CodeWarsUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassId" class="control-label"></label>
                <input asp-for="ClassId" class="form-control" />
                <span asp-validation-for="ClassId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodeWarsApiKey" class="control-label"></label>
                <input asp-for="CodeWarsApiKey" class="form-control" />
                <span asp-validation-for="CodeWarsApiKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodeWarsOverallScore" class="control-label"></label>
                <input asp-for="CodeWarsOverallScore" class="form-control" />
                <span asp-validation-for="CodeWarsOverallScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
